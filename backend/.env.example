# Basilisk Configuration

# Application
DEBUG=false

# Database
DATABASE_URL=sqlite:///./basilisk.db

# API
CORS_ORIGINS=["http://localhost:3000"]

# Kalshi API Credentials
# Get your API key from: https://kalshi.com/account/profile
KALSHI_KEY_ID=your_key_id_here
KALSHI_PRIVATE_KEY_PATH=/path/to/your/private_key.pem
