# Basilisk Configuration

# ===================
# APPLICATION
# ===================
DEBUG=false

# ===================
# DATABASE
# ===================
DATABASE_URL=sqlite:///./basilisk.db

# ===================
# API
# ===================
CORS_ORIGINS=["http://localhost:3000"]

# ===================
# KALSHI API (Required for trading)
# ===================
# Get your API key from: https://kalshi.com/settings/api
# Generate RSA key: openssl genrsa -out private_key.pem 4096
# Upload public key to Kalshi and get Key ID
KALSHI_KEY_ID=your_key_id_here
KALSHI_PRIVATE_KEY_PATH=/path/to/your/private_key.pem
KALSHI_USE_DEMO=true

# Builder Code for revenue sharing (apply at kalshi.com/builders)
KALSHI_BUILDER_CODE=

# ===================
# MODEL PARAMETERS
# ===================
MODEL_EV_THRESHOLD=0.02
MODEL_CONFIDENCE_THRESHOLD=0.60
KALSHI_FEE_RATE=0.07

# ===================
# TELEGRAM BOT (Optional)
# ===================
# Create bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_SECRET=

# ===================
# APPLE PUSH NOTIFICATIONS (Optional)
# ===================
# Requires Apple Developer account
# Create key at: developer.apple.com/account/resources/authkeys
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_KEY_PATH=
APNS_BUNDLE_ID=

# ===================
# INFRASTRUCTURE (Optional)
# ===================
REDIS_URL=redis://localhost:6379

# For encrypting stored API keys (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=
